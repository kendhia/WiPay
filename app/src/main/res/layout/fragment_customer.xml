<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="kendhia.co.wi_pay.Fragments.CustomerActivityFragment"
    tools:showIn="@layout/activity_customer"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <at.markushi.ui.CircleButton
        android:id="@+id/btn_scan_bill"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cb_color="@color/colorPrimaryDark"
        android:src="@drawable/barcode_scan"
        android:padding="12dp"
        android:elevation="8dp"
        android:text="Scan a bill"/>


    <at.markushi.ui.CircleButton
        android:id="@+id/btn_old_bills"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cb_color="@color/colorPrimaryDark"
        android:src="@drawable/briefcase_download"
        android:padding="12dp"
        android:elevation="8dp"
        android:text="Scan a bill"/>

</LinearLayout>
