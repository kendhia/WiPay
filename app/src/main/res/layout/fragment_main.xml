<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    tools:context="kendhia.co.wi_pay.Fragments.MainActivityFragment"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <at.markushi.ui.CircleButton
        android:id="@+id/brn_new_customer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cb_color="@color/colorPrimaryDark"
        android:src="@drawable/ic_shopping_cart_white_48dp"
        android:padding="12dp"
        android:elevation="8dp"
        android:text="I'm a customer"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/btn_new_market"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cb_color="@color/colorPrimaryDark"
        android:src="@drawable/ic_add_shopping_cart_white_48dp"
        android:padding="12dp"
        android:elevation="8dp"
        android:text="I'm a Market owner"/>
</LinearLayout>
